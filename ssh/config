Include /Users/reid/.colima/ssh_config

Host github.com
  HostName github.com
  User git
  IdentityFile ~/.ssh/id_ed25519
  IdentitiesOnly yes

Host rlevesque
  HostName rlevesque
  User rlevesque
  ForwardAgent yes
  ProxyCommand "/usr/local/bin/sft" proxycommand  %h
  IdentitiesOnly yes

Host *
  ServerAliveInterval 10
  ServerAliveCountMax 4
#  TCPKeepAlive yes
  ForwardAgent no
  StrictHostKeyChecking=accept-new
  # Use connection multiplexing to reuse existing connections
  ControlMaster auto
  ControlPath ~/.ssh/sockets/%r@%h-%p
  ControlPersist 600
