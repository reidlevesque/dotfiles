      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(gh pr:*)",
      "Bash(go:*)",
      "Bash(go list:*)",
      "Bash(go mod:*)",
      "Bash(go run:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(task:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Fetch(https://github.com/)",
      "Fetch(https://raw.githubusercontent.com/)"
